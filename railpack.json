{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "build": {
      "commands": [
        "...",
        { "cmd": "npx rimraf node_modules/.vite node_modules/.cache || true", "customName": "Cleanup Vite cache" },
        { "cmd": "npm ci --include=dev", "customName": "Install dev deps (vite)" },
        { "cmd": "npm run build", "customName": "Vite build" },
        { "cmd": "php artisan config:cache", "customName": "Cache config" },
        { "cmd": "php artisan route:cache", "customName": "Cache routes" },
        { "cmd": "php artisan view:cache", "customName": "Cache views" }
      ]
    }
  }
}